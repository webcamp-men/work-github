<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>

  <div>
    商品画像 <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div>
    商品名 <%= f.text_field :name %>
  </div>

  <div>
    商品説明 <%= f.text_area :introduction %>
  </div>

  <div>
    税抜価格 <%= f.number_field :price %>円
  </div>

  <div>
    <%= f.submit '新規登録' %>
  </div>

<% end %>