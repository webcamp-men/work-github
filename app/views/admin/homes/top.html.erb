<h1>注文履歴一覧</h1>

<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= order.delivery_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <%= paginate @orders %>