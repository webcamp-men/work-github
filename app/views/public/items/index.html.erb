<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div>
        <div class="d-flex flex-row">
          <h2>商品一覧</h2>
          <span>(全<%= @items.count %>件)</span>
        </div>

        <div class="d-flex justify-content-center flex-wrap">
          <% @items.each do |item| %>
            <div>
              <%= link_to item_path(item.id) do %>
                <p><%= image_tag item.get_image, size: "190x150" %></p>
                <p><%= item.name %></p>
                <p><%= item.price %></p>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-center"><%= paginate @items %></div>
      </div>
    </div>
  </div>
</div>
