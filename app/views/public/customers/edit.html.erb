<h1>会員情報編集</h1>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label '氏名' %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label 'フリガナ' %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label '郵便番号' %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label '住所' %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label '電話番号' %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit '編集内容を保存' %>
  </div>

  <%= link_to "退会する", confirm_withdraw_path %>

<% end %>