<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div>
      <div>
        <p><%= image_tag @item.get_image %></p>
      </div>
        <p>商品名 <%= @item.name %></p>
        <p>商品説明 <%= @item.introduction %></p>
        <p>税込価格(税抜価格) <%= @item.with_tax_price %>(<%= @item.price %>)円</p>
      </div>
  </div>
  <div class="row mx-auto">
    <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
  </div>
</div>
